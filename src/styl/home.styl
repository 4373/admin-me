@import './this.styl'

body
  background: background
  color: #655473
  font-size: 12px
  font-family: '微软雅黑', Monaco

.home
  min-height: 97vh
  margin: 1.5vh auto
  width: 98vw
  background: white
  border-radius: 10px
  display: flex
  .home-left
    flex: 0 0 200px
    border-right:1px solid #eee
    .menu-box
      padding: 16px
      .menu-parent
        margin-bottom: 16px;
        .parent-name
          padding: 10px
          color: #999
          .iconfont
            margin-right: 8px
        .menu-children
          .children-name
            padding: 10px 0
            padding-left: 34px
            color: #666
            cursor pointer
            &:hover
              background: #f5f5f5
  .home-right
    flex: 1 1 auto
    padding: 16px
