html
  overflow-y: scroll
*
  box-sizing: border-box

body
  background: #f5f5f5
  color: color2
  font-size: 12px
  font-family: '微软雅黑', Monaco
a
  color: primary
  text-decoration: none
  border: 1px solid transparent

::-webkit-input-placeholder
  color: color3
  font-size: 12px

input, button, select, a
  &:focus
    outline: none
    border-color: color1
    border-width: 1px
input, button, select
  border: 1px solid color4
  height:26px
  color: color2
input
  padding: 4px
  vertical-align: middle
  margin-right: 4px
  &[type = date]
    padding: 4px 4px 3px
    overflow: hidden
button
  padding: 2px 16px 1px
  vertical-align: middle
  background: color5
select
  padding: 2px 12px 1px
  background: white
  min-width: 120px
  option
    padding: 16px 8px
    display: block
    min-height: 30px;

