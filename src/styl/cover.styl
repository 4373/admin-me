html
  overflow-y: scroll
*
  box-sizing: border-box
body
  background: #f5f5f5
  color: color
  font-size: 12px
  font-family: '微软雅黑', Monaco
a
  color: primary
  text-decoration: none
  border: 1px solid transparent

input, button, select, a
  &:focus
    outline: none
    border-color: color1
    border-width: 1px

input
  height: 30px
  padding: 4px
  vertical-align: middle
  margin-right: 4px
  border: 1px solid color4
  &[type = date]
    padding: 4px 4px 3px
    overflow: hidden
button
  padding: 2px 12px 1px
  height: 30px
  border: 1px solid color4
  vertical-align: middle
select
  padding: 2px 12px 1px
  height: 30px
  background: white
  min-width: 120px
  option
    padding: 16px 8px
    display: block
    min-height: 30px;

